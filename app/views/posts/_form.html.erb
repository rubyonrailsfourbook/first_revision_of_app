<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
    	<div id="error_explanation">
      		<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      		<ul>
      			<% @post.errors.full_messages.each do |msg| %>
        			<li><%= msg %></li>
      			<% end %>
        <% end %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :published_on %>
	<%= f.datetime_select :published_on %>

	<%= f.label :tag_tokens, "Tags" %><br />
  	<%= f.text_field :tag_tokens, data: {load: @post.tag_list} %>

	<%= f.label :content %>
	<%= f.text_area :content, rows: 10, cols: 900,  class: 'wysihtml5' %>

	<p>Content is parsed with Markdown</p>

	<%= f.submit class: 'btn btn-primary' %>

<% end %>